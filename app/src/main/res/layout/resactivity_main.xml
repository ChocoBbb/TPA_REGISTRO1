<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrerActivity"
    android:background="@color/medium_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/blazed"
            android:text="Registro"
            android:textColor="@color/uDeep_green"
            android:textSize="60sp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa el siguiente formulario"
            android:textColor="@color/deep_green"
            android:fontFamily="@font/bondrians"
            android:textSize="30sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="55dp" />
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/nombre"
            android:textColorHint="@color/cian"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_custom"/>

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_custom"
            android:hint="@string/correo_electr_nico"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColorHint="@color/cian"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etCumple"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Fecha de Nacimiento"
            android:textColorHint="@color/cian"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:inputType="none"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_custom"/>

        <EditText
            android:id="@+id/etContra"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Contraseña"
            android:textColorHint="@color/cian"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_custom"/>

        <EditText
            android:id="@+id/etContra2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Repetir Contraseña"
            android:textColorHint="@color/cian"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:padding="15dp"
            android:background="@drawable/edittext_custom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrarse"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/regLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Volver al login"
            android:textColor="#00796B" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>